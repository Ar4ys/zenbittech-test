{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"**/*.ts\" \"test/**/*.ts\"",
    "start:prod": "NODE_ENV=production ts-node ./main.ts",
    "start:staging": "NODE_ENV=staging ts-node ./main.ts",
    "start:dev": "NODE_ENV=development ts-node-dev --rs --transpile-only --require tsconfig-paths/register ./main.ts",
    "start:debug": "NODE_ENV=development ts-node-dev --inspect --rs --transpile-only --require tsconfig-paths/register ./main.ts",
    "type-check": "tsc --noEmit",
    "lint": "pnpm prettier --check && pnpm eslint",
    "lint:fix": "pnpm prettier --write && pnpm eslint --fix",
    "prettier": "prettier --no-error-on-unmatched-pattern ./**/*.{ts,tsx,js,jsx}",
    "eslint": "eslint --no-error-on-unmatched-pattern --max-warnings=0 ./**/*.{ts,tsx,js,jsx}",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "db:generate": "drizzle-kit generate:pg",
    "db:pull": "drizzle-kit pull:pg",
    "db:push": "drizzle-kit push:pg",
    "db:drop": "drizzle-kit drop",
    "db:up": "drizzle-kit up:pg",
    "db:check": "drizzle-kit check:pg"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@repo/shared": "workspace:*",
    "@ts-rest/core": "^3.31.0",
    "@ts-rest/nest": "^3.31.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "drizzle-orm": "^0.29.3",
    "jsonwebtoken": "^9.0.2",
    "nestjs-zod": "^3.0.0",
    "postgres": "^3.4.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ts-results": "^3.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.102",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.3.1",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.10",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "npm": "Please use pnpm",
    "pnpm": ">=8.8.0",
    "yarn": "Please use pnpm"
  }
}
